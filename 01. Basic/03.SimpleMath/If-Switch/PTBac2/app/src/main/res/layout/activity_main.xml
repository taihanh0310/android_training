<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nthanh.ptbac2.MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phuong trinh bac hai"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toScreenPTBac2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do C qua Do F"
        android:id="@+id/button4"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="tranferToScreenDoCToDoF"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tim nam am lich"
        android:id="@+id/button7"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="tranferScreenTimNamAmLich"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ban cuu chuong"
        android:id="@+id/button8"
        android:layout_below="@+id/button7"
        android:layout_alignRight="@+id/button4"
        android:onClick="tranferScreenBanCuuChuong"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="May Tinh Bo Tui"
        android:id="@+id/button9"
        android:layout_below="@+id/button8"
        android:layout_alignRight="@+id/button4"
        android:onClick="tranferScreenKiemTraBienSoXe"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngay den Ngay di"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialog"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_alignRight="@+id/button4"
        android:onClick="tranferToScreenDialog"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Array"
        android:id="@+id/button12"
        android:layout_below="@+id/button11"
        android:layout_alignRight="@+id/button4" />
</RelativeLayout>
